name: MinIO Weaviate Python POC

on: [push]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up Docker Compose
      run: docker-compose up -d

    - name: Wait for Services to be Ready
      run: sleep 30 # Adjust based on your services' startup time

    - name: Adjust file permissions
      run: sudo chmod -R u+rwX .  # Make files writable by the current user

    - name: Commit changes
      run: |
        git config --local user.email "cdaprod@cdaprod.dev"
        git config --local user.name "Cdaprod"
        git add .
        # Only commit if there are changes
        if ! git diff --staged --quiet; then
          git commit -m "Automated weaviate data"
          echo "Changes committed."
        else
          echo "No changes to commit."
        fi

    - name: Push changes
      uses: ad-m/github-push-action@master
      with:
        github_token: ${{ secrets.GH_TOKEN }}
        branch: ${{ github.ref }}

    - name: Clean up
      run: docker-compose down